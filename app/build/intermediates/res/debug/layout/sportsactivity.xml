<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000"
    >


    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/imageView"
        android:src="@drawable/acumen"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:id="@+id/adernaline"
        android:src="@drawable/adrenaline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:id="@+id/loop"
        android:src="@drawable/loop"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:id="@+id/techhunt"
        android:src="@drawable/techhunt"
        android:layout_alignTop="@+id/loop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:id="@+id/techtrins"
        android:src="@drawable/techtrin"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:id="@+id/ladder"
        android:layout_alignBottom="@+id/techtrins"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:src="@drawable/ladden"
        android:visibility="visible"/>

</RelativeLayout><!-- From: file:/C:/Users/Subham/AndroidStudioProjects/Acumen_IT/app/src/main/res/layout/sportsactivity.xml -->